<!DOCTYPE html>
<html lang="en" ng-app="AngularStore">
  <head>
    <meta charset="utf-8">
     <title><%= typeof title === "undefined" ? "Βύβλος" : title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

	<!-- jQuery, Angular -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js" type="text/javascript"></script>

    <!-- Le styles -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="/js/html5shiv.js"></script>
    <![endif]-->

	<link rel="icon" href="/favicon.ico" type="image/x-icon">
	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

	<% if (typeof register === "undefined") register=false %>
	<% if (register) { %>
		<!-- <link href="/stylesheets/register.css" rel="stylesheet"> -->
	<% } %>
	<link href="/stylesheets/home.css" rel="stylesheet">
	<link href="/stylesheets/details.css" rel="stylesheet">
	<link href="/stylesheets/bootstrap-responsive.min.css" rel="stylesheet">
	<link href="/stylesheets/home-relative.css" rel="stylesheet">
	<script type="text/javascript" src="https://www.parsecdn.com/js/parse-1.2.12.min.js"></script>
  </head>
  <body  onload="titleCaseForm()">
  <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">Βύβλος</a>
          <div class="nav-collapse collapse">

			<% if(typeof user == "undefined") { %>
			<!-- login form -->
			  <form class="navbar-form pull-right" action="/" method="post" id="login">
				<input class="username" type="text" placeholder="Email" name="username">
				<input class="password" type="password" placeholder="Password" name="password">
				<button type="submit" class="btn">Sign in</button>

				<% if (!register) { %>
				  <a class="btn btn-lg btn-info" href="register">Register</a>
				<% } %>
			  </form>

			<% } else { %>
			  <form style="visibility:visible;" class="navbar-form pull-right" action="/logout" method="post" id="logout">
				<button type="submit" class="btn" action="/logout" method="post" >Sign out</button>
			  </form>
				  <!-- user logged in as start -->
				<p style="visibility:visible;" class="navbar-text pull-right">
				  Logged in as <a href="../userProfile" class="navbar-link"><%= Parse.User.current().get('email') %>&nbsp</a>
				</p>
				<!-- user logged end -->
			<% } %>

          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
